{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"moduleResolution": "nodenext",
		"types": [ "astro/client" ],
		"baseUrl": ".",
		"paths": {
			"@assets/*": [ "src/assets/*" ],
			"@components/*": [ "src/components/*" ],
			"@layouts/*": [ "src/layouts/*" ],
			"@server/*": [ "src/server/*" ]
		}
	}
}
